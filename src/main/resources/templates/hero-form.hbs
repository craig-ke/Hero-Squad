{{#partial "content"}}
    <div class="form-class">
        <form action="/heroes/new" method="post">
            <h3>Create New Hero !!</h3>
            <hr>
            <div class="form">
                <label for="name">Name</label><br>
                <input type="text" name="name" id="name"><br>
                <label for="age">Age</label><br>
                <input type="number" name="age" id="age" ><br>
                <label for="powers">Special Powers</label><br>
                <input type="text" name="powers" id="powers"><br>
                <label for="weakness">Weakness</label><br>
                <input type="text" name="weakness" id="weakness"><br>
                <label for="defence">Defense</label><br>
                <input type="number" name="defence" id="defence" max="100" min="1"><br>
                <label for="attack">Attack</label><br>
                <input type="number" name="attack" id="attack"><br>

            </div>


            <button type="submit" class="btn btn-primary btn-lg">Create</button>

        </form>
    </div>
{{/partial}}
{{> layout.hbs}}